						}
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AzureKeyVault_apdata')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ls_npr_config')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "AzureKeyVault_apdata",
							"type": "LinkedServiceReference"
						},
						"secretName": "[parameters('ls_npr_config_properties_typeProperties_connectionString_secretName')]"
