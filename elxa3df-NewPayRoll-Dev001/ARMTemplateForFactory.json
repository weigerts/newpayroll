			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ls_newpayroll_base')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"parameters": {
					"user": {
						"type": "string"
					},
					"pwdsecret": {
						"type": "string"
					},
					"port": {
						"type": "int"
					}
				},
				"annotations": [],
				"type": "Sftp",
				"typeProperties": {
					"host": "[parameters('ls_newpayroll_base_properties_typeProperties_host')]",
					"port": "@linkedService().port",
					"skipHostKeyValidation": true,
					"authenticationType": "Basic",
					"userName": "[parameters('ls_newpayroll_base_properties_typeProperties_userName')]",
					"password": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "AzureKeyVault_apdata",
							"type": "LinkedServiceReference"
